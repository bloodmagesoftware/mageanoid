# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,.gitmodules}]
charset = utf-8
indent_style = tab
tab_width = 4
indent_size = 4

[{*.rs,Cargo.toml,Cargo.lock}]
charset = utf-8
indent_style = space
tab_width = 4
indent_size = 4

[*.md]
indent_size = 4
trim_trailing_whitespace = false

eclint_indent_style = unset

[Dockerfile]
indent_style = space
indent_size = 4
